# Core app
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://eveonsafari.com
ALLOWED_ORIGINS=https://eveonsafari.com,https://www.eveonsafari.com
NEXT_PUBLIC_GA_ID=

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=REPLACE_WITH_PUBLIC_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_SERVICE_ROLE_KEY
ADMIN_EMAIL_ALLOWLIST=admin@eveonsafari.com

# Optional diagnostics endpoint
ENABLE_SUPABASE_TEST_ENDPOINT=false
SUPABASE_TEST_ALLOWED_TABLES=example_table

# SMTP notifications for /api/plan
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=notifications@example.com
SMTP_PASS=REPLACE_WITH_SMTP_PASSWORD
PLAN_EMAIL_FROM=notifications@example.com
PLAN_EMAIL_TO=ops@example.com

# Password reset
PASSWORD_RESET_REDIRECT_URL=https://eveonsafari.com/auth/callback

# Pesapal
PESAPAL_BASE_URL=https://cybqa.pesapal.com/pesapalv3
PESAPAL_ALLOWED_HOSTS=cybqa.pesapal.com,pay.pesapal.com
PESAPAL_CONSUMER_KEY=REPLACE_WITH_PESAPAL_CONSUMER_KEY
PESAPAL_CONSUMER_SECRET=REPLACE_WITH_PESAPAL_CONSUMER_SECRET
PESAPAL_CALLBACK_URL=https://eveonsafari.com/success
PESAPAL_CURRENCY=KES
PESAPAL_DEFAULT_AMOUNT=5
PESAPAL_IPN_URL=https://eveonsafari.com/api/pesapal/ipn
PESAPAL_IPN_NOTIFICATION_TYPE=POST
PESAPAL_IPN_ID=
PESAPAL_IPN_SECRET=REPLACE_WITH_SHARED_WEBHOOK_SECRET
PESAPAL_IPN_SIGNATURE_REQUIRED=true
PESAPAL_BILLING_EMAIL=customer@example.com
PESAPAL_BILLING_PHONE=255700000000
PESAPAL_BILLING_COUNTRY=KE
PESAPAL_BILLING_FIRST_NAME=Demo
PESAPAL_BILLING_LAST_NAME=Customer
